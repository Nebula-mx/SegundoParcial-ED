<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecuaciones.diferenciales.PrimaryController"
      alignment="TOP_CENTER" spacing="10" padding="20">

    <Label text="Parser de Ecuaciones Diferenciales (1er orden)" style="-fx-font-size:16px;"/>
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Ecuación (ej. y' = x + sin(y)):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="equationField" promptText="y' = x + sin(y)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="x₀:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="x0Field" promptText="0.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="y₀:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="y0Field" promptText="1.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Parsear y Validar" onAction="#onParse"/>
        <Button text="Evaluar ejemplo" onAction="#onEvaluateExample"/>
    </HBox>

    <TextArea fx:id="outputArea" editable="false" prefRowCount="8" wrapText="true"/>
</VBox>
